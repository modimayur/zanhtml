<div id="showcase">
<div class="row">
    {% for i in (1..2) %}
    	{% capture link %}custom_showcase{{ i }}_link{% endcapture %}
    	{% capture img_toggle %}custom_showcase{{ i }}_img_toggle{% endcapture %}
    	{% capture img_file %}custom_showcase{{ i }}_img.png{% endcapture %}
    	{% capture text1 %}custom_showcase{{ i }}_text1{% endcapture %}
        {% capture text2 %}custom_showcase{{ i }}_text2{% endcapture %}
    	{% capture text3 %}custom_showcase{{ i }}_text3{% endcapture %}

    	{% if settings[link] != '' or settings[text1] != '' or settings[text2] != '' or settings[text3] != '' %}
            <div class="col-sm-12 col-lg-6 custom_showcase custom_showcase__{{ i }}">
                <a href="{{ settings[link] }}">
                    {% if settings[img_toggle] and settings[img_toggle] != '' %}<img src="{{ img_file | asset_url }}" alt="{{ settings[text1] }} {{ settings[text2] }} {{ settings[text3] }}" />{% endif %}
                    <div>
                        <h4>{{ settings[text1] }}</h4>
                        <p>{{ settings[text2] }}</p>
                        <span>{{ settings[text3] }}</span>
                    </div>
                </a>
            </div>
      	{% endif %}
    {% endfor %}
</div>
</div>